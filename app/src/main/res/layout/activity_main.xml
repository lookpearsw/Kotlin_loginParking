<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="45dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="LOGIN"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textAlignment="center" android:fontFamily="@font/roboto"/>
        <!--USERNAME-->
        <TextView
                android:text="USERNAME : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" android:fontFamily="@font/roboto"/>
        <EditText
                android:id="@+id/UsernameEdit"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="username" android:fontFamily="@font/roboto"/>

     <!--PASSWORD-->
        <TextView
                android:text="PASSWORD : "
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" android:fontFamily="@font/roboto"/>
        <EditText
                android:id="@+id/PasswordEdit"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="password" android:fontFamily="@font/roboto"/>
    </LinearLayout>

    <Button
            android:layout_marginTop="45dp"
            android:text="LOGIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:fontFamily="@font/roboto"/>
    <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="REGISTER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:fontFamily="@font/roboto"/>

</LinearLayout>